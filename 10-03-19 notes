//matrix Arrays

string $names[] = {"Bill", "Mary", "Joe"};
int $numAssignments = 10;

float $grades[size($names)][$numAssignments]; //creates array that is 3x10

for ($i=0; $i<size($names); $i++)
{
	print $names($i);
	
	for($j=0; $j<$numAssignments; $j++)
	{
		print $grades[$i][$j];
	}
}

